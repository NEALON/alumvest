<div class="form-group">
  <%= label_tag @field, nil, :class => "col-md-3 control-label" %>

  <div class="col-md-7">
    <%- @values.each do |value| %>
        <label class="radio-inline" for="<%= @field %>">
          <%= @form.radio_button @field, @field == @value, :value => value %>
          <%= value %>
        </label>
    <%- end %>
  </div>
</div>
