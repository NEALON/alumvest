.panel.panel-default.marg-top
  .panel-heading
    %h3.panel-title.text-default= title
  .panel-body  
    #grouping
      = f.simple_fields_for grouping do |document| 
        = render 'documents_fields', {:f => document}
      
      .text-center
        = link_to_add_association(('<i class="fa fa-plus"></i> Add Document').html_safe, f, grouping, :partial => 'documents_fields', :force_non_association_create => true, :class => 'btn btn-primary')
  
