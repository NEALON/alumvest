= render 'investments/navigation', :active => 'investment_documents', :campaign => @campaign

.well
  %table.table
    %thead
      %tr
        %td
          Document
        %td
          Status
        %td
          Action

    - if @oy_an_exception_exists
      %p#em
        An exception was encountered by our system while trying to prepare information about your document signings. Please support@alumvest.com for assistance, or try again later.
    - else
      - @signings.each do |signing|
        %tbody
          %tr
            %td
              = signing.document.name
            %td
              = signing.status_for_end_user
            %td
              - if ['canceled', 'unsigned'].include? signing.status
                = link_to 'Review and Sign', signing.envelope.get_recipient_view('investor')
              - else
                None

