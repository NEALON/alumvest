= render 'investments/navigation', :active => 'investment_documents', :campaign => @campaign

.well
  %table.table
    %thead
      %tr
        %td
          Envelope
        %td
          Status
        %td
          Action

    %tbody

      - @signings.each do |signing|
        %tr
          %td
            = signing.template.name
          %td
            = signing.status
          %td
            - if signing.status == 'unsigned'
              = link_to 'Sign', '#', :class => 'btn btn-xs btn-success', :method => :get
              - #signing.envelope.get_recipient_view('investor')