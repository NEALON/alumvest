= render "users/navigation", :active => 'bancbox_agreement'
= render "users/header"

#information
  .container
    = render "shared/property_row", :header =>  "Technology Agreement", :value => nil
    = render "shared/property_row", :header => "Platform Agreement", :value => nil
    = render "shared/property_row", :header => "Privacy Policy", :value => nil

    = form_for @bancbox_agreement, :url => user_bancbox_agreement_path(@user), :html => {:class => "form-horizontal"} do |f|
      %fieldset
        = f.hidden_field :user_id

        - with_options :form => f do |op|
          = op.render_cell 'tb/form/checkbox', :display, :field => :is_agreed
        = render_cell 'tb/form/submit_button', :display