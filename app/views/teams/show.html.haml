= render 'campaigns/management_navigation', :active => :people, :campaign => @campaign

.panel
  = link_to 'Edit Team', edit_campaign_team_path(@campaign), :class => 'button small'
  - if @team.draft?
    = link_to 'Check for completeness', check_for_completeness_campaign_team_path(@campaign), :class => 'button small'

  = render 'shared/property_row', :header => 'Team Highlights', :value => (raw @team.team_highlights)

  %h5 Team members
  %p
    - @team.team_members.each do |p|
      = p.full_name
      = p.title
      = render 'shared/youtube', :video_url => p.video_url, :width => 590, :height => 400
      %br