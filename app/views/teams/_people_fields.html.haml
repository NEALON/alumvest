%fieldset                    
  - with_options :form => f do |op|
    = op.render_cell 'tb/form/text', :display, :field => :first_name
    = op.render_cell 'tb/form/text', :display, :field => :last_name
    = op.render_cell 'tb/form/text', :display, :field => :title
    = op.render_cell 'tb/form/filepicker', :display, :field => :avatar_url, :label => "Avatar"
    = op.render_cell 'tb/form/text', :display, :field => :facebook
    = op.render_cell 'tb/form/text', :display, :field => :twitter
    = op.render_cell 'tb/form/text', :display, :field => :linkedin
    = op.render_cell 'tb/form/richtext', :display, :field => :introduction
    = op.render_cell 'tb/form/text', :display, :field => :video_url
  %hr
  %h4 Education
  #educations
    = f.fields_for :educations do |e|
      = render 'education_fields', :f => e
    .links
      = link_to_add_association 'Add Education', f, :educations

  :erb
    <div class="form-group">
      <div class="col-md-3 control-label">&nbsp;</div>
      <div class="col-md-7">
        <%= link_to_remove_association "Remove this person", f, :class => 'btn btn-default btn-xs' %>
      </div>
    </div>
