- content_for :sub_navigation do
  .container
    .row{:style => "padding-bottom: 20px"}
      .col-md-12
        %ul.nav.nav-pills
          %li{:class => "#{'active' if active == :company}"}= link_to 'Company', (@disable_nav ? '#' : display_campaign_company_path(@campaign))
          %li{:class => "#{'active' if active == :team}"}= link_to 'Team', (@disable_nav ? '#' : display_campaign_team_path(@campaign))
          %li{:class => "#{'active' if active == :investment_terms}"}= link_to 'Investment Terms', (@disable_nav ? '#' : display_campaign_investment_term_path(@campaign))
          - if current_user && current_user.is_investor?
            %li{:class => "#{'active' if active == :invest}"}= link_to 'Invest', (@disable_nav ? '#' : new_campaign_investment_finalization_path(@campaign))
          %li{:class => "#{'active' if active == :updates}"}= link_to 'Updates', (@disable_nav ? '#' : campaign_company_display_updates_path(@campaign))
          %li{:class => "#{'active' if active == :jobs}"}= link_to 'Join Us', (@disable_nav ? '#' : campaign_company_display_jobs_path(@campaign))
