.company-item
  .company-body
    %figure
      .image
        = link_to display_campaign_company_path(campaign) do
          = image_tag(campaign.company.photo_for_card_display, :class => 'img-responsive', :title => campaign.company.campaign_title)
      %figcaption
        .title
          %h4.upper 
            = link_to campaign.company.campaign_title, display_campaign_company_path(campaign)
          .by-name 
            by 
            = link_to 'Columbia University', '#'
        %p 
          = campaign.company.short_description
          = link_to '[ ..... ]', display_campaign_company_path(campaign), :class => 'read-more nowrap', :title => 'read more', :data => {:toggle => "tooltip", :placement => "right", :container => 'body'}
  .company-footer
    .inner.media
      .pull-left
        .wrapper-rate
          - progress = (campaign.raised / campaign.investment_term.fundraising_amount * 100)
          %input{:type => "text", :title => 'Rating', :value => (progress > 100) ? '100' : progress, :data => {:toggle => 'knob', :width => '56', :height => '56', :linecap => 'round', :readOnly => 'true', :fgColor => "#2c6291", :bgColor => "#4d9fe7", :displayPrevious => 'true', :thickness => '0.25', :skin => 'tron', :displayPrevious => 'true'}}
      .media-body
        .row
          .col-xs-4
            %h6.text-info Goal
            %p= number_to_currency (campaign.investment_term.fundraising_amount)
          .separator
          .col-xs-4
            %h6.text-info Raised
            %p= number_to_currency (campaign.raised)
          .separator
          .col-xs-4
            %h6.text-info Funders
            %p= campaign.investments.finalized.count
/ END .company-item

