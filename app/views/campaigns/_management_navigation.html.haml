%nav.dashboard-nav
  %ul.nav.nav-pills.nav-stacked
    %li{:class => "#{'active' if active == :company}"}
      - unless entity = campaign.company
        = link_to new_campaign_company_path(campaign) do
          %i.fa.fa-building.fa-fw 
          %span.hidden-xs Campaign
      - else
        = link_to campaign_company_path(campaign) do
          %i.fa.fa-building.fa-fw 
          %span.hidden-xs Campaign
    %li{:class => "#{'active' if active == :people}"}
      - unless entity = campaign.team
        = link_to new_campaign_team_path(campaign) do
          %i.fa.fa-users.fa-fw 
          %span.hidden-xs Team
      - else
        = link_to campaign_team_path(campaign) do
          %i.fa.fa-users.fa-fw 
          %span.hidden-xs Team
    %li{:class => "#{'active' if active == :funding}"}
      - unless entity = campaign.investment_term
        = link_to new_campaign_investment_term_path(campaign) do
          %i.fa.fa-gavel.fa-fw 
          %span.hidden-xs Investment Terms
      - else
        = link_to campaign_investment_term_path(campaign) do
          %i.fa.fa-gavel.fa-fw 
          %span.hidden-xs Investment Terms
    %li{:class => "#{'active' if active == :updates}"}
      = link_to campaign_company_updates_path(campaign) do
        %i.fa.fa-refresh.fa-fw 
        %span.hidden-xs Updates
    %li{:class => "#{'active' if active == :jobs}"}
      = link_to campaign_company_jobs_path(campaign) do
        %i.fa.fa-suitcase.fa-fw 
        %span.hidden-xs Jobs
      
