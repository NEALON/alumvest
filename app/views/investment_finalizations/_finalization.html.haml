.row
  .col-md-8
    %h4 Thank you for your interest in investing in:
    = render 'companies/heading'

    %h5 To finalize your investment, take the following steps:

    #payment= render_cell 'workflow_step', :display, :label => "Finalize your payment information", :description => "Please verify your payment information.", :link => link_to("Start", new_campaign_investment_finalization_payment_information_path(@campaign, @investment_finalization), :class => "btn btn-primary"), :status => nil
    #questionnaire= render_cell 'workflow_step', :display, :label => "Complete our accredited investor questionnaire", :description => "Certify your accredited investor status.", :link => link_to("Start", new_campaign_investment_finalization_questionnaire_path(@campaign, @investment_finalization), :class => "btn btn-primary"), :status => nil
    #identity= render_cell 'workflow_step', :display, :label => "Verify your identity", :description => "Please help to confirm your legal identity.", :link => link_to("Start", new_campaign_investment_finalization_identity_verification_path(@campaign, @investment_finalization), :class => "btn btn-primary"), :status => nil
    #contracts= render_cell 'workflow_step', :display, :label => "Sign contracts", :description => "Sign all of the required contracts.", :link => link_to("Start", new_campaign_investment_finalization_contract_doc_group_path(@campaign, @investment_finalization), :class => "btn btn-primary"), :status => nil
    #subscription= render_cell 'workflow_step', :display, :label => "Confirm your subscription agreement", :description => "Sign up for your subscription agreement.", :link => link_to("Start", new_campaign_investment_finalization_subscription_agreement_path(@campaign, @investment_finalization), :class => "btn btn-primary"), :status => nil
    #irs= render_cell 'workflow_step', :display, :label => "Submit IRS forms", :description => "Send required tax documents.", :link => link_to("Start", new_campaign_investment_finalization_irs_doc_group_path(@campaign, @investment_finalization), :class => "btn btn-primary"), :status => nil

  .col-md-4
    = render :partial => 'companies/raise_summary'