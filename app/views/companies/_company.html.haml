-#= javascript_include_tag 'http://cdn.embed.ly/jquery.embedly-3.0.5.min.js'

.row
  -# main (left)
  .col-md-8
    = render 'heading'
    = render 'shared/youtube', :video_url => @company.video_url
    = render 'company_details'
    = render 'company_highlights'

  -# right sidebar
  .col-md-4
    = render :partial => 'raise_summary'

  -#:javascript
    $('document').ready(function(){
      $('div#embed').embedly({
        query: { maxwidth: 254, maxheight: 139, wmode: 'transparent' },
        key: '6df201d3d6b8438983bfa7de1d9c8854'
      })
    });
