-#= javascript_include_tag 'http://cdn.embed.ly/jquery.embedly-3.0.5.min.js'

.row
  - unless can? :invest, @campaign
    #invest-now-alert.alert.alert-danger.alert-dismissable.hide
      %button{:type => 'button', :class => 'close', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'}
        &times;
      You need to be an accredited investor first.
      - if current_user.nil?
        = link_to('Yes, I want to sign up!', '#signup-modal', :class => '', 'data-toggle' => 'modal')
      - else
        = link_to('Yes, I want to become an accredited investor!', user_path(current_user.id))
  = hidden_field_tag :invest_url, new_campaign_investment_path(@company.campaign),
    id: "invest-url"
  -# main (left)
  .col-md-8
    = render 'heading'
    = render 'shared/youtube', :video_url => @company.video_url
    = render 'company_details'
    = render 'company_highlights'

  -# right sidebar
  .col-md-4
    = render :partial => 'raise_summary', :locals => {:just_data => false}

  -#:javascript
    $('document').ready(function(){
      $('div#embed').embedly({
        query: { maxwidth: 254, maxheight: 139, wmode: 'transparent' },
        key: '6df201d3d6b8438983bfa7de1d9c8854'
      })
    });
