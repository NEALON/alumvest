-#= javascript_include_tag 'http://cdn.embed.ly/jquery.embedly-3.0.5.min.js'

.row
  -# main (left)
  .col-md-8
    = render 'heading'
    = render 'shared/youtube', :video_url => @company.video_url, :width => 590, :height => 400

    %p= @company.campaign_title
    %p= @company.category.name
    %p= raw @company.company_details
    %p= raw @company.faq

  -# right sidebar
  - if true # current_user && current_user.investor
    .col-md-4{:style => "padding-bottom: 2em;"}
      = button_to 'Begin investment process', new_campaign_investment_path(@company.campaign), :class => "btn btn-large btn-primary", :method => :get

  .col-md-4
    %div{:style => "padding-bottom: 2em;"}
      = button_to 'Begin investment process', new_campaign_investment_finalization_path(@company.campaign), :class => "btn btn-large btn-primary", :method => :get

    = render :partial => 'raise_summary'

    .panel{:style => "padding: 10px 20px 0px 20px"}
      %p Time until launch:
      %p
        %b= @company.campaign.humanize_time_left

    .panel{:style => "padding: 10px 20px 10px 20px"}
      %table{:width => "100%"}
        %tr
          %td
            Min Investment:
          %td
            Max Investment:
        %tr
          %td
            $1,000
          %td
            $10,000

    .panel{:style => "padding: 10px 20px 0px 20px"}
      %p Security Type:
      %p
        %b= @company.campaign.investment_term.equity_type

  .col-md-4
    %h5 Engagement

  .col-md-4.well
    .panel{:style => "padding: 10px 20px 0px 20px"}
      %p Commitments:
      %p
        %b= @campaign.investors.count
    .panel{:style => "padding: 10px 20px 0px 20px"}
      %p Followers:
      %p
        %b= @campaign.follows.count
    - if @current_user
      - if @current_user.following?(@campaign)
        - follow = Follow.new(:campaign => @campaign, :user => @current_user)
        = form_for follow, :url => campaign_unfollow_path do |f|
          = render 'shared/errors', :entity => follow
          %fieldset
            = f.hidden_field :campaign_id
            = f.hidden_field :user_id
            = f.submit "Unfollow this Campaign", :class => "btn btn-default"
      - else
        - follow = Follow.new(:campaign => @campaign, :user => @current_user)
        = form_for follow, :url => campaign_follow_path do |f|
          = render 'shared/errors', :entity => follow
          %fieldset
            = f.hidden_field :campaign_id
            = f.hidden_field :user_id
            = f.submit "Follow this Campaign", :class => "btn btn-success"


  .col-md-4
    %h5 Company Highlights

  .col-md-4.well
    .panel.outline{:style => "padding: 10px 30px 10px 30px"}
      %p= link_to @company.company_url, @company.company_url
      %p= raw @company.company_highlights

  -#:javascript
    $('document').ready(function(){
      $('div#embed').embedly({
        query: { maxwidth: 254, maxheight: 139, wmode: 'transparent' },
        key: '6df201d3d6b8438983bfa7de1d9c8854'
      })
    });