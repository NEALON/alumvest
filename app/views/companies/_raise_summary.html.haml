%h5 Raise

.panel.well{:style => "padding: 0px 20px 10px 20px"}
  %div#amount_invested
    %h3= number_to_currency (@campaign.investments.sum(:amount))
    raised of
    = number_to_currency (@company.campaign.investment_term.fundraising_amount)
    goal
  %div
    .progress.progress-striped.active
      .progress-bar{:role => "progressbar", :style => "width: #{@campaign.percent_complete_for_display }%"}

.panel.well{:style => "padding: 10px 20px 0px 20px"}
  %p Time until launch:
  %p
    %b= @company.campaign.humanize_time_left

.panel.well{:style => "padding: 10px 20px 10px 20px"}
  %table{:width => "100%"}
    %tr
      %td
        Min Investment:
      %td
        Max Investment:
    %tr
      %td
        $1,000
      %td
        $10,000

.panel.well{:style => "padding: 10px 20px 0px 20px"}
  %p Security Type:
  %p
    %b= @company.campaign.investment_term.equity_type

%h5 Engagement

.panel.well{:style => "padding: 10px 20px 0px 20px"}
  %p Commitments:
  %p
    %b#investor_count= @campaign.investors.count
.panel.well{:style => "padding: 10px 20px 0px 20px"}
  %p Followers:
  %p
    - if @campaign.follows.count == 0
      %b 0
    - else
    - @campaign.follows.first(10).each do |f|
      = link_to user_path f.user do
        = image_tag f.user.avatar_small
    - if @campaign.follows.count > 10
      and #{@campaign.follows.count - 10} more
    - if current_user
      - if current_user.following?(@campaign)
        - follow = Follow.new(:campaign => @campaign, :user => current_user)
        = form_for follow, :url => campaign_unfollow_path do |f|
          %fieldset
            = f.hidden_field :campaign_id
            = f.hidden_field :user_id
            = f.submit "Unfollow this Campaign", :class => "btn btn-default"
      - else
        - follow = Follow.new(:campaign => @campaign, :user => current_user)
        = form_for follow, :url => campaign_follow_path do |f|
          %fieldset
            = f.hidden_field :campaign_id
            = f.hidden_field :user_id
            = f.submit "Follow this Campaign", :class => "btn btn-success"
