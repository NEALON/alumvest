= render 'campaigns/management_navigation', :active => :company, :campaign => @campaign

%p.row
  .col-xs-12.col-md-4
  .col-xs-12.col-md-8
    = render_cell 'tb/mini_link_button', :display, :label => 'Edit Company', :link => edit_campaign_company_path(@campaign) unless @campaign.published?
    - if @company.draft?
      = render_cell 'tb/mini_link_button', :display, :label => 'Check for completeness', :link => check_for_completeness_campaign_company_path(@campaign)
    = render_cell 'tb/mini_link_button', :display, :label => 'Preview', :link => preview_campaign_company_path(@campaign), :new_page => (not Rails.env.test?)

.panel
  %p

  = render 'shared/property_row', :header => 'Company name', :value => @company.company_name
  = render 'shared/property_row', :header => 'Logo', :value => (image_tag @company.logo(:w =>32, :h =>32) unless @company.logo.blank?)
  = render 'shared/property_row', :header => 'Short Description', :value => @company.short_description

  = render 'shared/property_row', :header => 'Website', :value => @company.company_url
  = render 'shared/property_row', :header => 'Campaign Title', :value => @company.campaign_title
  = render 'shared/property_row', :header => 'Company Highlights', :value => (raw @company.company_highlights)
  = render 'shared/property_row', :header => 'Company Details', :value => (raw @company.company_details)
  = render 'shared/property_row', :header => 'Founded', :value => @company.founded_on_year
  = render 'shared/property_row', :header => 'Structure', :value => @company.ownership_structure
  = render 'shared/property_row', :header => 'Category', :value => @company.category.try(:name)
  = render 'shared/property_row', :header => 'Address', :value => @company.address_1
  = render 'shared/property_row', :header => '', :value => @company.address_2
  = render 'shared/property_row', :header => '', :value => "#{@company.city} #{@company.state} #{@company.zip}"
  = render 'shared/property_row', :header => 'Phone', :value => @company.phone
  = render 'shared/property_row', :header => 'faq', :value => (raw @company.faq)
  .row.form-row
    .col-xs-4.col-md-4.form-label
      %b.pull-right
        Video
    .col-xs-8.col-md-8.form-value#video
      = render 'shared/youtube', :video_url => @company.video_url, :width => 590, :height => 400
  = render 'shared/property_row', :header => 'Photo', :value => (image_tag @company.photo(:w => 64, :h => 64) unless @company.photo.blank?)
  = render 'shared/property_row', :header => 'Banner Photo', :value => (image_tag @company.banner_photo(:w => 64, :h => 64) unless @company.photo.blank?)
  %br
