= form_for [@campaign, @company], :url => campaign_company_path(@campaign), :html => {:class => 'form-horizontal well'} do |f|

  = render 'shared/errors', :entity => @company

  %fieldset
    = f.hidden_field :campaign_id

    - with_options :form => f do |op|
      = op.render_cell 'tb/form/filepicker', :display, :field => :logo_url, :label => 'Logo'
      = op.render_cell 'tb/form/text', :display, :field => :company_name
      = op.render_cell 'tb/form/text', :display, :field => :short_description
      = op.render_cell 'tb/form/text', :display, :field => :company_url
      = op.render_cell 'tb/form/text', :display, :field => :campaign_title
      = op.render_cell 'tb/form/richtext', :display, :field => :company_highlights
      = op.render_cell 'tb/form/richtext', :display, :field => :company_details
      = op.render_cell 'tb/form/select', :display, :field =>  :founded_on_year, :values => Array(1990..Date.today.year)
      = op.render_cell 'tb/form/select', :display, :field =>  :ownership_structure, :values => ownership_structures
      = op.render_cell 'tb/form/select', :display, :field =>  :category_id, :values => Alumvest::CategoryBase.for_select
      = op.render_cell 'tb/form/text', :display, :field => :address_1
      = op.render_cell 'tb/form/text', :display, :field => :address_2
      = op.render_cell 'tb/form/text', :display, :field => :city
      = op.render_cell 'tb/form/text', :display, :field => :state
      = op.render_cell 'tb/form/text', :display, :field => :zip
      = op.render_cell 'tb/form/text', :display, :field => :phone
      = op.render_cell 'tb/form/richtext', :display, :field =>  :faq
      = op.render_cell 'tb/form/text', :display, :field => :video_url, :placeholder => '//www.youtube.com/embed/ynwaZZZz6GA'
      = op.render_cell 'tb/form/filepicker', :display, :field => :photo_url, :label => 'Campaign Placard Image'
      = op.render_cell 'tb/form/filepicker', :display, :field => :banner_photo_url, :label => 'Campaign Banner Image'

    = render_cell 'tb/form/submit_button', :display
