= content_for :sidebar_left do
  %h4
    = company_worksheet.company_basic_form.try(:name) || 'New company'

  %ul.large-12.small-12.side-nav
    %li{:class => "#{'active' if active == :demographic}"}
      - unless entity = company_worksheet.company_basic_form
        = link_to('Demographic Info', new_company_basic_form_path)
      - else
        = link_to('Demographic Info', company_basic_form_path(entity))
    %li{:class => "#{'active' if active == :people}"}
      - unless entity = company_worksheet.company_personnel_form
        = link_to('People', new_company_personnel_form_path)
      - else
        = link_to('People', company_personnel_form_path(entity))
    %li{:class => "#{'active' if active == :funding}"}
      - unless entity = company_worksheet.company_funding_doc_form
        = link_to('Funding Docs', new_company_funding_doc_form_path)
      - else
        = link_to('Funding Docs', company_funding_doc_form_path(entity))
    %li{:class => "#{'active' if active == :market}"}
      - unless entity = company_worksheet.company_market_form
        = link_to('Market', new_company_market_form_path)
      - else
        = link_to('Market', company_market_form_path(entity))

  .panel
    %h4 Campaigns
    %ul.large-12.small-12.side-nav
      - company_worksheet.campaigns.each do |campaign|
        %li= link_to campaign.title, edit_company_worksheet_campaign_path(company_worksheet, campaign)
      - if company_worksheet.campaigns
        %hr
      %li
        = link_to('New campaign', new_company_worksheet_campaign_path(company_worksheet))
