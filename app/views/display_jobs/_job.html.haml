.row
  .col-md-12
    - if @jobs.blank?
      %div{:style => "padding-top: 40px"}
        There are no jobs for this campaign.
    - else
      - @jobs.each do |job|
        %hr
        %h3= job.title
        %p= "Last updated #{time_ago_in_words(job.updated_at)} ago"
        %h4 Description
        %p= raw job.description
        %h4 Contact
        %p= "#{job.contact}"
