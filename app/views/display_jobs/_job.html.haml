%h2.separator-line.separator-gray.separator-arrows
  %span Updates  

.list-posts
  - if @jobs.blank?
    %p.lead.text-center.text-open-sans There are no jobs for this campaign. 
  - else
    .row
      - @jobs.in_groups_of(2, false).each do |jobs|
        .col-sm-6.col-lg-6
          - jobs.each do |job|
            .post-item
              %h2= job.title
              %p.text-date= "Last updated #{time_ago_in_words(job.updated_at)} ago"
              .text-desc
                %p= raw job.description
                %p 
                  Contact:
                  %strong= "#{job.contact}"

-#
  %hr.campaign-separator
  %h3.text-center.compaign-section-header Jobs
  .row
    .col-md-12
      - if @jobs.blank?
        %div{:style => "padding-top: 40px"}
          There are no jobs for this campaign.
      - else
        - @jobs.each do |job|
          %hr
          %h3= job.title
          %p= "Last updated #{time_ago_in_words(job.updated_at)} ago"
          %h4 Description
          %p= raw job.description
          %h4 Contact
          %p= "#{job.contact}"
