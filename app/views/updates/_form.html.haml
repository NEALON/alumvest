%legend Updates

= form_for [@campaign, @update], :url => campaign_company_updates_path(@campaign, @update), :html => {:class => "form-horizontal"} do |f|

  %fieldset
    = f.hidden_field :company_id

    = render_cell :tb_text_field,        :show, :form => f, :field => :subject
    = render_cell :tb_richtext_field,    :show, :form => f, :field => :details
    = render_cell :tb_radiobutton_field, :show, :form => f, :field => :visibility, :values => ["Everyone", "Accredited Investors", "My Investors", "Just Me"]
    = render_cell :tb_text_field,       :show, :form => f, :field => :video_url
    = render_cell :tb_submit_button,    :show