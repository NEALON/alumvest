      %li You should buy it
      %li Because it's great
      %li and everyone else has one
    %p.prod-price $19.99
    %button.cart-url Add to cart &raquo;

.row
  .large-12.small-12.columns
    .prod-reviews
      %h3 Reviews
    .row
      .small-12.columns
        .panel
          = render 'railsthemes/railsthemes/testimonial'
        -#- A reply:
        .large-11.small-11.columns.large-offset-1.small-offset-1
          .panel= render 'railsthemes/railsthemes/testimonial'
      - 3.times do
        .small-12.columns
          .panel= render 'railsthemes/railsthemes/testimonial'
%hr
.row
  .large-12.small-12.columns
    %h3 Similar Items
    %ul.small-block-grid-2.large-block-grid-5
      - 5.times do
        %li= image_tag "http://placehold.it/500x500"
