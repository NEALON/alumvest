.container
  %section.wrapper-dashboard
    .row
      .col-xs-2.col-md-3.col-lg-4
        = render 'investors/side_navigation', :active => @active
      
      .col-xs-10.col-md-9.col-lg-8.pull-right
        .dashboard-content
          = render 'layouts/flash', :flash => flash
          
          %h1.text-primary.no-marg-top.no-marg-bottom 
            Link 
            %span.hidden-xs your 
            Bank Account
          
          %p
            = link_to 'Complete your user profile', edit_user_path(@user)
            to gain access to your bank account information management.