= render "users/navigation", :active => 'bancbox_identity_verification'
= render "users/header"

#information
  .container
    = form_for @bancbox_identity_verification, :url => user_bancbox_identity_verification_path(@user), :html => {:class => "form-horizontal"} do |f|
      %fieldset
        = f.hidden_field :user_id

        - with_options :form => f do |op|
          = op.render_cell 'tb/form/checkbox', :display, :field => :is_verified
        = render_cell 'tb/form/submit_button', :display