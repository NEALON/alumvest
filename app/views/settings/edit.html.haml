= content_for :header_1 do
  #title

- if @user.investor.present?
  = render 'investors/side_navigation', :active => @active
- else
  = render 'users/side_navigation', :active => @active

#information.dashboard
  %h1
    Change your password
  = form_for @user, :url => user_settings_path(@user), :html => {:id => 'user_settings_form', :class => 'form-horizontal editing-form well'} do |f|
    = render 'shared/errors', :entity => @user

    %fieldset
      = render_cell 'tb/form/password', :display, :form => f, :field => :password
      = render_cell 'tb/form/password', :display, :form => f, :field => :password_confirmation
      = render_cell 'tb/form/submit_button', :display