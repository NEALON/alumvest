= render "users/side_navigation", :active => 'demographic_info'
= render "users/header"

#information
  .container
    = form_for @demographic, :url => user_demographic_path(@user), :html => {:class => "form-horizontal"} do |f|
      %fieldset
        - with_options :form => f do |op|
          = op.hidden_field :user_id
          = op.render_cell 'tb/form/text', :display, :field => :mobile_phone
          = op.render_cell 'tb/form/text', :display, :field => :home_phone
          = op.render_cell 'tb/form/text', :display, :field => :address_1
          = op.render_cell 'tb/form/text', :display, :field => :address_2
          = op.render_cell 'tb/form/text', :display, :field => :city
          = op.render_cell 'tb/form/text', :display, :field => :state
          = op.render_cell 'tb/form/text', :display, :field => :zipcode
          = op.render_cell 'tb/form/richtext', :display, :field => :personal_statement

        = render_cell 'tb/form/submit_button', :display
