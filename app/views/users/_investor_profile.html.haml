-if @user.nil?
  %h2 User not found
- else
  - if current_user != nil and @user.id == current_user.id

    = form_for @user.investor, :url => user_investor_path(@user), :html => {:class => "form-horizontal"} do |f|
      - if @user.is_investor?
        = fields_for :investor do |i|
          %fieldset
            = f.hidden_field :user_id

            - with_options :form => i do |op|
              = op.render_cell 'tb/form/text', :display, :field => :ssn
              = op.render_cell 'tb/form/select', :display, :field =>  :marital_status, :values => ["Single", "Married", "Separated", "Divorced", "Widowed", "Cohabiting", "Civil Union", "Domestic Partnership"]
              = op.render_cell 'tb/form/richtext', :display, :field => :financial_info
              = op.render_cell 'tb/form/text', :display, :field => :spending_habits
              = op.render_cell 'tb/form/text', :display, :field => :income
              = op.render_cell 'tb/form/text', :display, :field => :income_type
              = op.render_cell 'tb/form/text', :display, :field => :net_worth
              = op.render_cell 'tb/form/text', :display, :field => :investor_representations
              = op.render_cell 'tb/form/text', :display, :field => :company
              = op.render_cell 'tb/form/text', :display, :field => :job_title
              = op.render_cell 'tb/form/richtext', :display, :field => :experience
              = op.render_cell 'tb/form/richtext', :display, :field => :expertise
              = op.render_cell 'tb/form/richtext', :display, :field => :personal_message

            = render_cell 'tb/form/submit_button', :display

      - else
        You are not an investor.
