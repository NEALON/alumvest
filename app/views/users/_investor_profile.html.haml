-if @user.nil?
  %h2 User not found
- else
  - if @current_user != nil and @user.id == @current_user.id

    = form_for @user.investor, :url => user_investor_path(@user), :html => {:class => "form-horizontal"} do |f|
      - if @user.is_investor?
        = fields_for :investor do |i|
          %fieldset
            = f.hidden_field :user_id
            = render_cell 'tb/form/text_field', :display, :form => i, :field => :ssn
            = render_cell 'tb/form/select_field', :display, :form => i, :field =>  :marital_status, :values => ["Single", "Married", "Separated", "Divorced", "Widowed", "Cohabiting", "Civil Union", "Domestic Partnership"]
            = render_cell 'tb/form/richtext_field', :display, :form => i, :field => :financial_info
            = render_cell 'tb/form/text_field', :display, :form => i, :field => :spending_habits
            = render_cell 'tb/form/text_field', :display, :form => i, :field => :income
            = render_cell 'tb/form/text_field', :display, :form => i, :field => :income_type
            = render_cell 'tb/form/text_field', :display, :form => i, :field => :net_worth
            = render_cell 'tb/form/text_field', :display, :form => i, :field => :investor_representations
            = render_cell 'tb/form/text_field', :display, :form => i, :field => :company
            = render_cell 'tb/form/text_field', :display, :form => i, :field => :job_title
            = render_cell 'tb/form/richtext_field', :display, :form => i, :field => :experience
            = render_cell 'tb/form/richtext_field', :display, :form => i, :field => :expertise
            = render_cell 'tb/form/richtext_field', :display, :form => i, :field => :personal_message
            = render_cell 'tb/form/submit_button', :display

      - else
        You are not an investor.