-if @user.nil?
  %h2 User not found
-else
  - if @current_user != nil and @user.id == @current_user.id
    = form_for @user, :html => {:class => "form-horizontal"} do |f|
      %fieldset
        = render_cell :tb_filepicker_field, :show, :form => f, :field => :avatar_url
        = render_cell :tb_text_field,       :show, :form => f, :field => :first_name
        = render_cell :tb_text_field,       :show, :form => f, :field => :middle_name
        = render_cell :tb_text_field,       :show, :form => f, :field => :last_name
        = render_cell :tb_text_field,       :show, :form => f, :field => :email
        = render_cell :tb_text_field,       :show, :form => f, :field => :facebook
        = render_cell :tb_text_field,       :show, :form => f, :field => :linkedin
        = render_cell :tb_submit_button,    :show