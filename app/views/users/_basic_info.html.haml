= form_for @user, :url => user_path(@user), :html => {:class => 'form-horizontal editting-form well'} do |f|
  = render 'shared/errors', :entity => @user

  %fieldset
    - with_options :form => f do |op|
      = op.render_cell 'tb/form/filepicker', :display, :field => :avatar_url, :label => "Avatar"
      = op.render_cell 'tb/form/text', :display, :field => :first_name
      = op.render_cell 'tb/form/text', :display, :field => :middle_name
      = op.render_cell 'tb/form/text', :display, :field => :last_name
      = op.render_cell 'tb/form/radiobutton', :display, :field => :gender, :values => ["Male", "Female"]
      -#= op.render_cell 'tb/form/dateselect', :display, :field => :date_of_birth
      -#= op.render_cell 'tb/form/text', :display, :field => :ssn, :placeholder => "XXX-XX-XXXX"
      = op.render_cell 'tb/form/text', :display, :field => :mobile_phone
      = op.render_cell 'tb/form/text', :display, :field => :home_phone
      = op.render_cell 'tb/form/text', :display, :field => :address_1
      = op.render_cell 'tb/form/text', :display, :field => :address_2
      = op.render_cell 'tb/form/text', :display, :field => :city
      = op.render_cell 'tb/form/text', :display, :field => :state
      = op.render_cell 'tb/form/text', :display, :field => :zipcode
      = op.render_cell 'tb/form/text', :display, :field => :email
      = op.render_cell 'tb/form/text', :display, :field => :facebook, :placeholder => "http://www.facebook.com/user_name"
      = op.render_cell 'tb/form/text', :display, :field => :linkedin, :placeholder => "http://www.linkedin.com/in/user_name"
      = op.render_cell 'tb/form/richtext', :display, :field => :personal_statement

    %hr
    %h4 Education
    #educations
      = f.fields_for :educations do |e|
        = render 'education_fields', :f => e
      .links
        = link_to_add_association 'Add Education', f, :educations
    = render_cell 'tb/form/submit_button', :display
