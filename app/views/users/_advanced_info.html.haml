-if @user.nil?
  %h2 User not found
-else
  - if @current_user != nil and @user.id == @current_user.id
    = semantic_form_for [@user] do |f|
      .fields
        =f.inputs do
          =f.input :gender,     :as => :select, :collection => ["Male", "Female"]
          =f.input :date_of_birth, :as => :date_select, :start_year => 1900
          =f.input :mobile_phone
          =f.input :home_phone
          =f.input :address_1
          =f.input :address_2
          =f.input :city
          =f.input :state
          =f.input :zipcode
          =f.input :personal_statement, :input_html => { :class => 'ckeditor' }
        .rows
          =f.submit "Save"
