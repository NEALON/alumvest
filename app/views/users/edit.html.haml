- content_for :breadcrumbs do
  %ol.breadcrumb
    %li= link_to('Home', '/')
    - if current_user.is_owner?
      %li.unavailable= 'Business owner'
    - else
      %li.unavailable= 'Investor'
    %li= link_to(@user.full_name, user_path(@user))
    %li.unavailable
      Edit

= render 'navigation', :active => @active
- if @active == 'notifications' or @active == 'bank_account'
  = render 'partials/coming_soon'
- else
  = render @active
