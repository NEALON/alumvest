-if @user.nil?
  %h2 User not found
-else
  %h2
    = @user.first_name
    = @user.last_name
  - if @user.id == @current_user.id
    = semantic_form_for [@user] do |f|
      .fields
        =f.inputs "Profile Information" do
          =f.input :first_name
          =f.input :middle_name
          =f.input :last_name
          =f.input :avatar_url, as: :formtastic_filepicker_image
          =f.input :gender
          =f.input :date_of_birth
          =f.input :email
          =f.input :facebook
          =f.input :linkedin
          =f.input :mobile_phone
          =f.input :home_phone
          =f.input :address_1
          =f.input :address_2
          =f.input :city
          =f.input :state
          =f.input :zipcode
          =f.input :personal_statement

        - if @user.is_investor?
          =f.inputs :name => "Investor Information", :for => :investor do |inf|
            =inf.input :ssn
            =inf.input :marital_status
            =inf.input :financial_info
            =inf.input :spending_habits
            =inf.input :income
            =inf.input :income_type
            =inf.input :net_worth
            =inf.input :investor_representations
            =inf.input :industry
            =inf.input :company
            =inf.input :job_title
            =inf.input :experience
            =inf.input :expertise
            =inf.input :personal_message

        - if @user.is_owner?
          =f.inputs :name => "Owner Information", :for => :owner do |owf|
            =owf.input :ssn
            =owf.input :marital_status
            =owf.input :financial_info
            =owf.input :experience
            =owf.input :expertise
            =owf.input :personal_message

        .rows
          =f.submit "Save"
