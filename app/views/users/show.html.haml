= render "users/side_navigation", :active => @active
= render "users/header"

#information
  .container
    = button_to 'Edit', edit_user_path(@user), :class => 'btn btn-primary', :method => :get
    = render "shared/property_row", :header => "First Name", :value => @user.first_name
    = render "shared/property_row", :header => "Middle Name", :value => @user.middle_name
    = render "shared/property_row", :header => "Last Name", :value => @user.last_name
    = render "shared/property_row", :header => "Gender", :value => @user.gender
    = render "shared/property_row", :header => "Date of Birth", :value => @user.date_of_birth
    = render "shared/property_row", :header => "SSN", :value => @user.ssn
    = render "shared/property_row", :header => "Mobile Phone", :value => @user.mobile_phone
    = render "shared/property_row", :header => "Home Phone", :value => @user.home_phone
    = render "shared/property_row", :header => "Address 1", :value => @user.address_1
    = render "shared/property_row", :header => "Address 2", :value => @user.address_2
    = render "shared/property_row", :header => "City", :value => @user.city
    = render "shared/property_row", :header => "State", :value => @user.state
    = render "shared/property_row", :header => "Zip", :value => @user.zipcode
    = render "shared/property_row", :header => "Email", :value => @user.email
    = render "shared/property_row", :header => "Facebook", :value => @user.facebook
    = render "shared/property_row", :header => "LinkedIn", :value => @user.linkedin
    = render "shared/property_row", :header => "Personal Statement", :value => (raw @user.personal_statement)

- if current_user && current_user == @user && current_user.user_type_undefined?
  #user-type-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          %button{:type => 'button', :class => 'close', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'}
            &times;
          .h4
            Are you an investor or an owner?
        .modal-body
          = form_for [@user], :html => {:class => "form-horizontal"} do |f|
            = f.hidden_field :user_type, :value => "Investor"
            = f.submit "I am an Investor", :class => "btn btn-primary btn-lg btn-block"
          %br
          = form_for [@user], :html => {:class => "form-horizontal"} do |f|
            = f.hidden_field :user_type, :value => "Owner"
            = f.submit "I am an Owner", :class => "btn btn-success btn-lg btn-block"
  :javascript
    $("#user-type-modal").modal()