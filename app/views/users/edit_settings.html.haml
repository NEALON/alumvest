= render 'navigation', :active => @active
= render "users/header"

#information
  .container
    = form_for @user, :html => {:class => "form-horizontal"} do |f|
      %fieldset
        = render_cell 'tb/form/password', :display, :form => f, :field => :password
        = render_cell 'tb/form/password', :display, :form => f, :field => :password_confirmation
        = render_cell 'tb/form/submit_button', :display