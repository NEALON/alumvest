= content_for :sidebar_left do
  %ul.nav.nav-stacked
    %li{:class => "#{'active' if active == 'basic_info'}"}
      = link_to('Basic Information', user_path(@user))
    %li{:class => "#{'active' if active == 'bank_account'}"}
      = link_to_show_or_new(@user.bank_account, 'Bank Account', user_bank_account_path(@user), new_user_bank_account_path(@user))
    %li{:class => "#{'active' if active == 'settings_info'}"}
      = link_to('Settings', user_settings_path(@user))
    -#%li{:class => "#{'active' if active == 'notifications'}"}
      = link_to('Notifications', user_path(@user))
