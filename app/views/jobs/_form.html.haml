%legend Jobs
= render 'shared/errors', :entity => @job

- if active == :new
  - url = campaign_company_jobs_path(@campaign, @job)
- else
  - url = campaign_company_job_path(@campaign, @job)

= form_for [@campaign, @job], :url => url, :html => {:class => "form-horizontal"} do |f|

  %fieldset
    = f.hidden_field :company_id
                               
    - with_options :form => f do |op|
      = op.render_cell 'tb/form/text', :display, :field => :title
      = op.render_cell 'tb/form/richtext', :display, :field => :description
      = op.render_cell 'tb/form/text', :display, :field => :contact

    = render_cell 'tb/form/submit_button', :display
