%legend Jobs
= render 'shared/errors', :entity => @job

- if active == :new
  - url = campaign_company_jobs_path(@campaign, @job)
- else
  - url = campaign_company_job_path(@campaign, @job)

= form_for [@campaign, @job], :url => url, :html => {:class => "form-horizontal"} do |f|

  %fieldset
    = f.hidden_field :company_id

    = render_cell :tb_text_field,        :show, :form => f, :field => :title
    = render_cell :tb_richtext_field,    :show, :form => f, :field => :description
    = render_cell :tb_text_field,       :show, :form => f, :field => :contact
    = render_cell :tb_submit_button,    :show
