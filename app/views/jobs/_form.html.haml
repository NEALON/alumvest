- if active == :new
  - url = campaign_company_jobs_path(@campaign, @job)
- else
  - url = campaign_company_job_path(@campaign, @job)

= simple_form_for [@campaign, @job], :url => url, :wrapper => :vertical_form, :html => {:class => 'form-vertical'}, :validate => true do |f|
  = render 'shared/error_notification', :errors => f.error_notification
  
  = f.hidden_field :company_id
  
  .row
    .col-sm-7
      = f.input :title, :label => 'Title', :icon => 'glyphicon glyphicon-ok form-control-feedback', :wrapper => :vertical_form_with_icon
      = f.input :contact, :label => 'Contact', :icon => 'glyphicon glyphicon-ok form-control-feedback', :wrapper => :vertical_form_with_icon
  = f.input :description, :label => 'Description', :as => :text, :input_html => {:rows => 3, :class => 'ckeditor'}, :wrapper => :vertical_form

  .form-action.marg-bottom-lg
    = f.submit 'Save', :class => 'btn btn-primary btn-lg'


