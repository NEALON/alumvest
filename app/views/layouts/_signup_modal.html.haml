#signup-modal.modal.fade
  .modal-dialog.modal-large
    .modal-content
      .modal-header
        %button{:type => 'button', :class => 'close', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'}
          &times;
        .h4
          Sign up with...
      .modal-body.modal-row.row
        .col-md-6.modal-row-middle
          .col-md-8.col-md-offset-2
            %a{:href => "/auth/facebook", :class =>"btn btn-primary btn-lg btn-block"} Facebook
            %br
            %a{:href => "/auth/linkedin", :class =>"btn btn-info btn-lg btn-block"} LinkedIn
        .col-md-6.modal-row-middle.modal-left-border
          = render "layouts/signup_email"
