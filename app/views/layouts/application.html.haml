%head
  %meta{:charset => 'utf-8'}/
  %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}/
  %title
    \#{title = (yield :title); title.blank? ? 'AlumVest' : title}
  = favicon_link_tag '/favicon.png'
  = stylesheet_link_tag 'application'
  = stylesheet_link_tag '//cdn-images.mailchimp.com/embedcode/slim-081711.css' unless Rails.env.test?
  = stylesheet_link_tag '//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css'

  = javascript_include_tag :modernizr 
  = csrf_meta_tags
  = yield :head
  - unless Rails.env.test?
    = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/respond.js/1.3.0/respond.js"
  = render 'layouts/shareaholic_header'
%body
  = render 'layouts/header'
  #content{:style => 'clear: both'}
    - if content_for? :header_1
      .row
        .container
          .col-md-12
            = yield :header_1
    = yield :breadcrumbs if content_for? :breadcrumbs
    = yield :sub_navigation if content_for? :sub_navigation

    - if content_for? :sidebar_left
      .container
        .row
          .container
            #sidebar.col-xs-12.col-md-3
              = yield :sidebar_left
            #main-content.col-md-9.col-xs-12
              = render 'layouts/flash', :flash => flash
              = yield
    - elsif content_for? :sidebar_right
      .container
        .row
          .col-md-9.col-xs-12
            = render 'layouts/flash', :flash => flash
            = yield
          #sidebar.col-md-3.col-xs-12
            = yield :sidebar_right
    - else
      - if content_for? flash
        .container
          .row
            .col-md-12.col-xs-12
              = render 'layouts/flash', :flash => flash
      = yield
    .push
  #footer
    .container
      .row
        - unless content_for?(:without_navigation) || (yield :without_navigation) == true
          .col-md-6.col-xs-12.footer-navigation
            = render 'layouts/footer_navigation'
          .col-md-6.col-xs-12
            #mc_embed_signup
              %form#mc-embedded-subscribe-form.validate{:action => "http://alumvest.us7.list-manage.com/subscribe/post?u=87110e136bca68b8e0ebfaa1f&amp;id=d1076d6921", :method => "post", :name => "mc-embedded-subscribe-form", :target => "_blank", :novalidate => "true"}
                / %label{ :for => "mce-EMAIL" } Subscribe to our mailing list
                %input#mce-EMAIL.email{ :type => "email", :value => "", :name => "EMAIL", :placeholder => "Email", :required => "true"}
                /  real people should not fill this in and expect good things - do not remove this or risk form bot signups
                %input#mc-embedded-subscribe.button{ :type => "submit", :value => "Subscribe", :name => "subscribe" }
                %div{ :style => "position: absolute; left: -5000px;" }
                  %input{ :type => "text", :name => "b_87110e136bca68b8e0ebfaa1f_d1076d6921", :value => "" }
            .share-group
              %img{ :src => image_path('home/facebook.png')}
              %img{ :src => image_path('home/twitter.png')}
              %img{ :src => image_path('home/google_plus.png')}
              %img{ :src => image_path('home/linkedin.png')}
      / %hr
      .copyright
        %p
          Copyright &copy; 2014 AlumVest, Inc.  All Rights Reserved.


  = render :partial => 'layouts/signup_modal'
  = render :partial => 'layouts/login_modal'
  - if current_user && current_user.user_type_undefined?
    = render :partial => 'layouts/user_type_modal'
  
  = javascript_include_tag 'application'
  = yield :scripts
</html>
