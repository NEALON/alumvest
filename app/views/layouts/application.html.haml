%head
  %meta{:charset => "utf-8"}/
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %title
    \#{title = (yield :title); title.blank? ? "AlumVest" : title}
  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  = csrf_meta_tags
  = yield :head
  :plain
    <link href='http://fonts.googleapis.com/css?family=Rokkitt:400,700|Varela+Round' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,700|Ubuntu' rel='stylesheet' type='text/css'>
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
  = render 'layouts/shareaholic_header'
%body

  %nav#header.navbar.navbar-default.navbar-fixed-top{ 'role' => 'navigation'}
    .container
      .navbar-header
        <!-- .navbar-toggle is used as the toggle for collapsed navbar content -->
        %button.navbar-toggle{ :type => 'button', "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
          %span.sr-only
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a{:href => '/', :class => 'navbar-brand'} AlumVest
      - unless content_for?(:without_navigation) || (yield :without_navigation) == true
        %div.collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav
            = render partial: 'layouts/header_navigation'
          %form.navbar-form.navbar-left.form-search{ :role => 'search'}
            %div.form-group
              %input.form-control{ :type => 'text', :placeholder => 'Search'}
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              %li#user-dropdown
                = link_to current_user.name, '#', :id => "user-name", :class => "dropdown-toggle", 'data-toggle' => 'dropdown'
                %ul.dropdown-menu
                  %li
                    = link_to 'Profile', user_path(current_user.id), :class => "btn"
                  %li
                    = link_to 'Settings', edit_user_path(current_user), :class => "btn"
                  %li
                    = link_to 'Sign out', logout_path, :class => "btn", :method => :delete
            - else
              %li
                = link_to('Register', '#signup-modal', :class => '', 'data-toggle' => 'modal')
              %li
                = link_to('Login', '#login-modal', :class => '', 'data-toggle' => 'modal')
  #content
    - if content_for? :breadcrumbs
      .container
        .row
          .col-md-12
            = yield :breadcrumbs
    - if content_for? :header_1
      .container
        .row
          .col-md-12
            = yield :header_1
    - if content_for? :sub_navigation
      = yield :sub_navigation
    //.container
    //.row
    - if content_for? :sidebar_left
      .container
        .row
          #sidebar.col-xs-12.col-md-3
            = yield :sidebar_left
          #sidebar-content.col-md-9.col-xs-12
            = render 'layouts/flash', :flash => flash
            = yield
    - elsif content_for? :sidebar_right
      .container
        .row
          .col-md-8.col-xs-12
            = render 'layouts/flash', :flash => flash
            = yield
          #sidebar.col-md-4.col-xs-12
            = yield :sidebar_right
    - else
      .row
        .col-md-12.col-xs-12
          = render 'layouts/flash', :flash => flash
          = yield
  .push
  #footer
    .container
      .row{:style => "padding-top: 100px"}
        - unless content_for?(:without_navigation) || (yield :without_navigation) == true
          .col-md-10.col-xs-12
            %ul.nav.nav-pills
              = render 'layouts/footer_navigation'
          .col-md-2.col-xs-12
            %img{ :src => image_path('home/facebook.png')}
            %img{ :src => image_path('home/twitter.png')}
            %img{ :src => image_path('home/google_plus.png')}
          %hr
          %div
            %p
              = mail_to "info@alumvest.com"
              &nbsp;&#149;&nbsp; 999.9999 | Copyright (c) 2013 AlumVest, Inc.  All Rights Reserved. 

    = render :partial => 'layouts/signup_modal'
    = render :partial => 'layouts/login_modal'
  
  = yield :scripts
</html>
