  //   %a{:href => "/auth/linkedin", :class =>"button expand"} Sign up via Linkedin
  //   %a{:href => new_identity_path, :class =>"button expand"} Sign up via Email
  //   .a.close-reveal-modal &#215;
  // #login-modal.reveal-modal.small
  //   %a{:href => "/auth/facebook", :class =>"button expand"} Login via Facebook
  //   %a{:href => "/auth/linkedin", :class =>"button expand"} Login via Linkedin
  //   %a{:href => new_session_path, :class =>"button expand"} Login via Email
  //   .a.close-reveal-modal &#215;
  
  //= javascript_include_tag "railsthemes_meta"

  = yield :scripts
  = yield :reveal_modals
</html>
