%head
  %meta{:charset => "utf-8"}/
  %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %meta{:content => "Luke Flener, RailsThemes.com", :name => "designer"}/
  %link{:href => image_path('railsthemes_meta/favicon.ico'), :rel => "icon", :type => "image/x-icon"}/
  %title
    \#{title = (yield :title); title.blank? ? "AlumVest" : title}
  <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
  = stylesheet_link_tag "application"
  //= stylesheet_link_tag "railsthemes_meta"
  <script src="http://code.jquery.com/jquery-1.10.1.min.js"></script>
  <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
  <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
  = javascript_include_tag "application"
  //= javascript_include_tag "railsthemes_samples" unless Rails.env.production?
  //= csrf_meta_tags
  = yield :head
  :plain
    <link href='http://fonts.googleapis.com/css?family=Rokkitt:400,700|Varela+Round' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Ubuntu:400,700|Ubuntu' rel='stylesheet' type='text/css'>
  = render 'layouts/shareaholic_header'
%body

  %nav#header.navbar.navbar-default.navbar-fixed-top{ 'role' => 'navigation'}
    .container
      .navbar-header
        <!-- .navbar-toggle is used as the toggle for collapsed navbar content -->
        %button.navbar-toggle{ :type => 'button', "data-toggle" => "collapse", "data-target" => ".navbar-collapse"}
          %span.sr-only
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a{:href => '/', :class => 'navbar-brand'} AlumVest
      - unless content_for?(:without_navigation) || (yield :without_navigation) == true
        %div.collapse.navbar-collapse.navbar-ex1-collapse
          %ul.nav.navbar-nav
            = render partial: 'layouts/header_navigation'
          %form.navbar-form.navbar-left{ :role => 'search'}
            %div.form-group
              %input.form-control{ :type => 'text', :placeholder => 'Search'}
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              %li
                = link_to current_user.name, user_path(current_user.id), :class => "btn small"
              %li
                = link_to('Sign out', logout_path, :class => "btn small", :method => :delete)
            - else
              %li
                = link_to('Register', new_identity_path, :class => "")
              %li
                = link_to('Login', new_session_path, :class => "")     
  #content
    - if content_for? :breadcrumbs
      .container
        .row
          .col-md-12
            = yield :breadcrumbs
    - if content_for? :header_1
      .row
        .col-md-12
          = yield :header_1
    .row
      - if content_for? :sidebar_left
        #sidebar.col-xs-12.col-md-3
          = yield :sidebar_left
        .col-md-9.col-xs-12
          = render 'layouts/flash', :flash => flash
          = yield
      - elsif content_for? :sidebar_right
        .col-md-8.col-xs-12
          = render 'layouts/flash', :flash => flash
          = yield
        #sidebar.col-md-4.col-xs-12
          = yield :sidebar_right
      - else
        .col-md-12.col-xs-12
          = render 'layouts/flash', :flash => flash
          = yield
  .push
  #footer
    .container
      .row
        - unless content_for?(:without_navigation) || (yield :without_navigation) == true
          .col-md-12.col-xs-12
            %ul.nav.nav-pills
              = render 'layouts/footer_navigation'
          %hr
          %div
            %p
              = mail_to "info@alumvest.com"
              &nbsp;&#149;&nbsp; 999.9999 | Copyright (c) 2013 AlumVest, Inc.  All Rights Reserved. 
  // #signup-modal.reveal-modal.small
