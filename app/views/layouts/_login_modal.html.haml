.modal.fade#login-modal
  %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} &times;
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        %h4.modal-title 
          .logo.pull-left
            %img{:src => image_path('home/logo.png'), :alt => 'Alumvest', :width => 120}
          Sign In
      .modal-body
        = render "layouts/login_email"
        .horizontal-separator
          .inner or
        = render "layouts/auth_facebook_linkedin"
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", type: "button"}
          %i.fa.fa-angle-double-left
          Back to page
    /.modal-content
  /.modal-dialog
/.modal