#login-modal.modal.fade
  .modal-dialog.modal-large
    .modal-content
      .modal-header
        / %button{:type => 'button', :class => 'close', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'}
        /   %span.glyphicon.glyphicon-remove
      .modal-body.modal-row.row
        .col-md-12
          = render "layouts/login_email"
          = render "layouts/auth_facebook_linkedin"
          %button{:type => 'button', :class => 'close', 'data-dismiss' => 'modal', 'aria-hidden' => 'true'} Back to homepage
          / .col-md-12.modal-switcher
          / = link_to('Register', '#signup-modal', :class => 'switcher-btn', 'data-toggle' => 'modal')
