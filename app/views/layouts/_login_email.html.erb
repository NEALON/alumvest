<form id="login_form" class='form-vertical' action="/auth/identity/callback" method="post">
  <fieldset>
    <div class="form-group">
      <input id="auth_key" name="auth_key" type="email" class="form-control input-lg" placeholder="Email">
    </div>

    <div class="form-group">
      <input id="password" name="password" type="password" class="form-control input-lg" placeholder="Password">
    </div>

    <!-- Button -->
    <div class="form-group">
      <button id="singlebutton" name="commit" type="submit" class="btn btn-success btn-lg btn-block">Login</button>
    </div>
    
  </fieldset>
</form>
