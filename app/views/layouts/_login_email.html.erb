<div class='container'>
  <form class="form-horizontal" action="/auth/identity/callback" method="post">
    <fieldset>
      <div class="form-group">
        <label class="col-md-4 control-label" for="auth_key">Email</label>

        <div class="col-md-8">
          <input id="auth_key" name="auth_key" type="text" class="form-control input-md">
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-4 control-label" for="password">Password</label>

        <div class="col-md-8">
          <input id="password" name="password" type="password" class="form-control input-md">
        </div>
      </div>

      <!-- Button -->
      <div class="form-group">
        <div class="col-md-4 col-md-offset-4">
          <button id="singlebutton" name="commit" type="submit" class="btn btn-primary btn-success">Login</button>
        </div>
      </div>

    </fieldset>
  </form>
</div>
