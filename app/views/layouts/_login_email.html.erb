
<form id="login_form" class='form-horizontal well' action="/auth/identity/callback" method="post">
  <fieldset>
    <div class="form-group">
      <div class="col-md-12">
        <input id="auth_key" name="auth_key" type="email" class="form-control input-md" placeholder="Email">
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-12">
        <input id="password" name="password" type="password" class="form-control input-md" placeholder="Password">
      </div>
    </div>

    <!-- Button -->
    <div class="form-group">
      <div class="col-md-12">
        <button id="singlebutton" name="commit" type="submit" class="btn btn-primary btn-success">Login</button>
      </div>
    </div>

  </fieldset>
</form>
