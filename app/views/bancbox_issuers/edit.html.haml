= render "users/side_navigation", :active => 'bancbox_issuer_profile'
= render "users/header"

#information
  .container
    = form_for @bancbox_issuer, :url => user_bancbox_issuer_path(@user), :html => {:class => "form-horizontal"} do |f|
      %fieldset
        = f.hidden_field :user_id

        - with_options :form => f do |op|
          = op.render_cell 'tb/form/text', :display, :field => :first_name
          = op.render_cell 'tb/form/text', :display, :field => :middle_initial
          = op.render_cell 'tb/form/text', :display, :field => :last_name
          = op.render_cell 'tb/form/text', :display, :field => :ssn
          = op.render_cell 'tb/form/text', :display, :field => :email
          = op.render_cell 'tb/form/text', :display, :field => :phone
          = op.render_cell 'tb/form/text', :display, :field => :date_of_birth
          = op.render_cell 'tb/form/text', :display, :field => :address_1
          = op.render_cell 'tb/form/text', :display, :field => :address_2
          = op.render_cell 'tb/form/text', :display, :field => :city
          = op.render_cell 'tb/form/text', :display, :field => :state
          = op.render_cell 'tb/form/text', :display, :field => :zip
          = op.render_cell 'tb/form/text', :display, :field => :company_name
          = op.render_cell 'tb/form/text', :display, :field => :company_type
          = op.render_cell 'tb/form/text', :display, :field => :company_registration_state
          = op.render_cell 'tb/form/text', :display, :field => :company_tax_id
          = f.check_box :agreement
          = f.label :agreement,
            "I agree to Privacy Policy, Platform Agreement, Technology Agreement @ bancboxinvest.com"
        = render_cell 'tb/form/submit_button', :display

