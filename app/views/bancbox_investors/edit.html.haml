= render "users/navigation", :active => 'bancbox_investor_profile'
= render "users/header"

#information
  .container
    = form_for @bancbox_investor, :url => user_bancbox_investor_path(@user), :html => {:class => "form-horizontal"} do |f|
      %fieldset
        = f.hidden_field :user_id

        - with_options :form => f do |op|
          = op.render_cell 'tb/form/text', :display, :field => :first_name
          = op.render_cell 'tb/form/text', :display, :field => :last_name
          = op.render_cell 'tb/form/text', :display, :field => :ssn
          = op.render_cell 'tb/form/select', :display, :field =>  :investor_type, :values => ["Individual/LLC", "International", "Custodian"]
          = op.render_cell 'tb/form/text', :display, :field => :email
          = op.render_cell 'tb/form/text', :display, :field => :phone
          = op.render_cell 'tb/form/text', :display, :field => :date_of_birth
          = op.render_cell 'tb/form/text', :display, :field => :address_1
          = op.render_cell 'tb/form/text', :display, :field => :address_2
          = op.render_cell 'tb/form/text', :display, :field => :city
          = op.render_cell 'tb/form/text', :display, :field => :state
          = op.render_cell 'tb/form/text', :display, :field => :zip
        = render_cell 'tb/form/submit_button', :display

